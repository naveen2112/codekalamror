<section class="auth">
  <div class="container-fluid">
    <div class="row auth-wrap">
      <div class="col-md-6">
        <div class="authentication-container signUpFormAr">
          <div class="signInFormWrap">
            <div class="container-wrap">

              <h2 class="formTitle">Join US</h2>
              <p class="formText">Itâ€™s quick and easy.</p>

              <div class="progress">
                <div class="progress-bar" role="progressbar" style="width:50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
              </div>

              <div class="formWrap">

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "sign-up", class: "needs-validation"}) do |f| %>

                  <div class="form-group required">
                    <label class="control-label" for="InputFirstName">First name</label>
                    <%= f.text_field :first_name, class: "form-control", id: "InputFirstName", placeholder: "First name" %>
                  </div>

                  <div class="form-group required">
                    <label class="control-label" for="InputLastName">Last name</label>
                    <%= f.text_field :last_name, class: "form-control", id: "InputLastName", placeholder: "Last name" %>
                  </div>


                  <%= f.fields_for "company_attributes" do |form| %>
                    <div class="form-group required">
                      <label class="control-label" for="InputOrganisationName">Organisation name</label>
                      <%= form.text_field :name, class: "form-control", id: "InputOrganisationName", placeholder: "Organisation name" %>
                    </div>
                  <% end %>

                  <div class="form-group required">
                    <label class="control-label" for="InputBusinessName">Business email</label>
                    <%= f.email_field :email, class: "form-control", id: "InputBusinessName", placeholder: "Business email" %>
                  </div>

                  <div class="form-group required">
                    <label class="control-label" for="InputPassword">Password</label>
                    <%= f.password_field :password, class: "form-control", id: "InputPassword", placeholder: "Password" %>
                  </div>

                  <div class="form-group required">
                    <label class="control-label" for="InputPasswordConfirmation">Password Confirmation</label>
                    <%= f.password_field :password_confirmation, class: "form-control", id: "InputPassword", placeholder: "Password confirmation" %>
                  </div>

                  <div class="buttonWrap">
                    <button class="btn btn-primary btn-block" role="button">Next</button>
                    <p class="text-center login-link">Do you already have an account?
                      <a class="text-link" href="/users/sign_in">Log in</a></p>
                  </div>
                <% end %>
              </div>

            </div>
          </div>
        </div>

      </div>
      <div class="col-md-6">
        <p>Right side content</p>
      </div>
    </div>
  </div>
</section>
