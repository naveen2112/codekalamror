<div class="post-create-wrap">
  <h4 class="section-title">Edit your post</h4>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6 inner-wrap position-relative">
      <div id="post-form">
        <%= render "posts/partials/form" %>
      </div>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6 inner-wrap">
      <p class="control-label">Preview</p>
      <div id="preview-post"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $('#preview-post').html("<%= escape_javascript (render partial: 'posts/partials/preview_filled') %>");

    $(document).ready(function (){
        $(".selected_tag").removeAttr("style")
        <% @post.tags.each do |tag| %>
           $(".close_icon-<%= tag.id %>").click(function (){
              $("#edit-remove-tag-<%= tag.id %>").hide()
              $("#edit-form-tag-id-<%= tag.id %>").val('')
           })
        <% end %>
    })

</script>

<%= render "posts/partials/shared_javascript" %>