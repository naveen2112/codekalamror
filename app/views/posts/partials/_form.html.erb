<%= form_with(model: @post, local: false, html: { id: "new-post" }) do |form| %>
  <div class="form-group">
    <label class="control-label">Title <small>(internal only)</small></label>
    <%= form.text_field :title, class: "form-control", placeholder: "Title of your post" %>
  </div>
  <div class="form-group">
    <label class="control-label">
      Platforms
      <p>
        <small>Which platforms should this be shared on?</small>
      </p>
    </label>
    <div class="row group-check-button">
      <div class="icon-checkbox position-relative">
        <input value="linked_in" class="form-control" type="checkbox" name="post[platform_name][]" id="post_platform_name">
        <div class="custom-check">
